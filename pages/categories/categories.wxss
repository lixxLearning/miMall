/* pages/categories/categories.wxss */
page,.main{
    height: 100vh;
}

.main {
    display: flex;
    flex-direction: row;
    height: 100%;
    width: 100%;
    background: #fff;
}

.on {
    color: #fff;
    font-weight: bold;
    border-bottom: 2px solid #fff;
}

.category-left {
    display: flex;
    flex-direction: column;
    width: 140rpx;
    border-right: 1px solid #dcdcdc;
    background-color: #ff6700;
    text-align: center;
}

.cate-name {
    display: inline-block;
    margin-top: 40rpx;
    font-size: 10pt;
}

.category-right {
    display: flex;
    flex-direction: column;
}

.cate-content {
    margin-top: 40rpx;
}

.cate-list-content {
    margin-top: 40rpx;
    height: 100vh;
}

.cate-list-content:nth-child(1) {
    margin-top: 0;
}

.cate-content .banner {
    width: 500rpx;
    height: 200rpx;
    margin: 0 auto;
}

.cate-content .header{
    height: 90rpx;
    line-height: 90rpx;
    font-size: 11pt;
    text-align: center;
}

.banner image{
    width: 100%;
    height: 100%;
}

.cate-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.cate-item {
    display: flex;flex-direction: column;
    align-items: center;
    width: 150rpx;
    height: 150rpx;
    margin: 14rpx 26rpx;
}

.cate-item image{
    display: inline-block;
    width: 120rpx;
    height: 120rpx;
}
.cate-item text{
    display: inline-block;
    font-size: 24rpx;
    margin-top: 16rpx;
}
